@model IEnumerable<TravelReviewSite.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-4">
        <div class="thumbnail">
            <img src="~/Images/FullSizeRender (1).jpg" />       
            <div class="caption">
                <h2>@Html.DisplayFor(modelItem => item.Category.Country)</h2>
                <h3>@Html.DisplayFor(model => item.City)</h3>
                <h4><strong>@Html.DisplayFor(model => item.Topic)</strong></h4>
                <p>@Html.DisplayFor(model => item.Description)</p>
                <h6>@Html.DisplayFor(model => item.Username)</h6>
                <h6>@Html.DisplayFor(model => item.DatePosted)</h6>
                <p><a href="#" class="btn btn-primary" role="button">Read More!</a></p>
                <ol class="breadcrumb">
                    <li><a href="#"> @Html.ActionLink("Edit", "Edit", new { id = item.ReviewID }) </a></li>
                    <li><a href="#">@Html.ActionLink("Details", "Details", new { id = item.ReviewID })</a></li>
                    <li class="active">@Html.ActionLink("Delete", "Delete", new { id = item.ReviewID })</li>
                </ol>
            </div>
        </div>
    </div>
    }
</div>

