@model IEnumerable<TravelReviewSite.Models.Review>

@{
    ViewBag.Title = "Index";
}
<div class="jumbotron">
    <div class="container">
        <h1><Strong>Travel <br> Reviews</Strong></h1>
        <h2>Your Next Adventure Awaits..</h2>
        <p><a href="#" class="btn btn-primary" role="button">Write a Review</a>&nbsp;<a href="#" class="btn btn-primary" role="button">Search Reviews</a></p>
    </div>
</div>
<div class="row">
    @foreach (var item in Model)
    {
     
        @*Thumbnail reviews*@
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="thumbnail">
                <div class="caption">
                    @*Image per review*@
              
                        <div class="CategoryPic">
                            @if (item.Category.Country == "UAE")
                {
                                <div class="uaeImage">

                                    <img src="~/Images/FullSizeRender.jpg" class="img-responsive"  style="background-size: cover"/>
                                </div>
                            }
                            else if (item.Category.Country == "Spain")
                            {
                                <div class="spainImage">
                                    <img src="~/Images/IMG_2066.JPG" class="img-responsive"  style="background-size: cover" />
                                </div>
                            }
                           
                            else if (item.Category.Country == "France")
                            {
                                <div class="franceImage">
                                    <img src="~/Images/FullSizeRender (1).jpg" class="img-responsive" style="background-size: cover" />
                                </div>
                            }
                            else if (item.Category.Country == "Croatia")
                            {
                                <div class="croatiaImage">                                 
                                    <img src="~/Images/IMG_2920.JPG" class="img-responsive" style="background-size: cover" />
                                </div>
                            }
                            else if (item.Category.Country == "Mexico")
                            {
                                <div class="mexicoImage">
                                    <img src="~/Images/IMG_2922.JPG" class="img-responsive" style="background-size: cover" />
                                </div>
                            }
                            else if (item.Category.Country == "Turkey")
                            {
                                <div class="turkeyImage">
                                    <img src="~/Images/IMG_2187.JPG" class="img-responsive" style="background-size: cover" />
                                </div>
                            }
                            else if (item.Category.Country == "Canada")
                            {
                                <div class="canadaImage">
                                    <img src="~/Images/IMG_9130.JPG" class="img-responsive" style="background-size: cover" />
                                </div>
                            }
                            else if (item.Category.Country == "USA")
                            {
                                <div class="usaImage">
                                    <img src="~/Images/IMG_4845.JPG" class="img-responsive" style="background-size: cover" />
                                </div>
                            }
                        </div>
                    
                    <h2><strong>@Html.DisplayFor(modelItem => item.Category.Country)</strong></h2>
                    <h3>@Html.DisplayFor(model => item.City)</h3>
                    <h4>@Html.DisplayFor(model => item.Topic)</h4>
                    <p>@Html.DisplayFor(model => item.Description)</p>
                    <h6>@Html.DisplayFor(model => item.Username)</h6>
                    <h6>@Html.DisplayFor(model => item.DatePosted)</h6>
                    <p><a href="https://www.google.com" class="btn btn-primary" role="button">Read More!</a></p>
                    <ol class="breadcrumb">
                        <li><a href="#"> @Html.ActionLink("Edit Review", "Edit", new { id = item.ReviewID }) </a></li>
                        <li><a href="#">@Html.ActionLink("Read Review", "Details", new { id = item.ReviewID })</a></li>
                        <li class="active">@Html.ActionLink("Delete Review", "Delete", new { id = item.ReviewID })</li>
                    </ol>
                </div>
            </div>
        </div>
    }
</div>
