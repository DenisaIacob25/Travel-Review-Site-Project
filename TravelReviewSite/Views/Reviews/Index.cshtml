@model IEnumerable<TravelReviewSite.Models.Review>

@{
    ViewBag.Title = "Index";
}
<div class="jumbotron">
    <div class="container">
        <h1><Strong>Travel <br> Reviews</Strong></h1>
        <h2>Your Next Adventure Awaits..</h2>
        <p><a href="#" class="btn btn-primary" role="button">Write a Review</a>&nbsp;<a href="#" class="btn btn-primary" role="button">Search Reviews</a></p>
        </div>
    </div>
<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-4">
        <div class="thumbnail">
            @*<img src="..." alt="...">*@
            <div class="caption">
                <h2><strong>@Html.DisplayFor(modelItem => item.Category.Country)</strong></h2>
                <h3>@Html.DisplayFor(model => item.City)</h3>
                <h4>@Html.DisplayFor(model => item.Topic)</h4>
                <p>@Html.DisplayFor(model => item.Description)</p>
                <h6>@Html.DisplayFor(model => item.Username)</h6>
                <h6>@Html.DisplayFor(model => item.DatePosted)</h6>
                <p><a href="https://www.google.com" class="btn btn-primary" role="button">Read More!</a></p>
                <ol class="breadcrumb">
                    <li><a href="#"> @Html.ActionLink("Edit Review", "Edit", new { id = item.ReviewID }) </a></li>
                    <li><a href="#">@Html.ActionLink("Read Review", "Details", new { id = item.ReviewID })</a></li>
                    <li class="active">@Html.ActionLink("Delete Review", "Delete", new { id = item.ReviewID })</li>
                </ol>
            </div>
        </div>
    </div>
    }
</div>
